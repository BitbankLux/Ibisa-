
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>IBISA | Watcher Dashboard</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/css/ionicons.min.css">
    <!-- jvectormap -->
    <link rel="stylesheet" href="~/css/jquery-jvectormap.css">
    <!--Circle css -->
    <link rel="stylesheet" href="~/css/circle.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/theme.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
       folder instead of downloading all of them to reduce the load. -->
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
</head>
<body class="hold-transition layout-top-nav">
    <div class="wrapper">
        <header class="main-header">
            <nav class="navbar navbar-static-top">
                <div class="container">
                    <div class="navbar-header">
                        <a href="#" class="navbar-brand"><img src="~/images/ibisa-logo.png" alt="IBISA Logo"></a>
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                            <i class="fa fa-bars"></i>
                        </button>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="active"><a href="@Url.Action("WatcherDashboard", "IBISAWatchers")"><i class="fa fa-dashboard"></i> Dashboard <span class="sr-only">(current)</span></a></li>
                            <li><a href="@Url.Action("Workplace", "IBISAWatchers")"><i class="fa fa-handshake-o"></i> Workplace</a></li>
                        </ul>
                        <form class="navbar-form navbar-left visible-xs" role="search">
                            <div class="form-group">
                                <input type="text" class="form-control" id="navbar-search-input" placeholder="Search">
                            </div>
                        </form>
                    </div>
                    <!-- /.navbar-collapse -->
                    <!-- Navbar Right Menu -->
                    <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav">
                            <!-- Notifications Menu -->
                            <li class="dropdown notifications-menu">
                                <!-- Menu toggle button -->
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-bell"></i>
                                    <span class="label label-warning">10</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="header">You have 10 notifications</li>
                                    <li>
                                        <!-- Inner Menu: contains the notifications -->
                                        <ul class="menu">
                                            <li>
                                                <!-- start notification -->
                                                <a href="#">
                                                    <i class="fa fa-users text-aqua"></i> 5 new members joined today
                                                </a>
                                            </li>
                                            <!-- end notification -->
                                        </ul>
                                    </li>
                                    <li class="footer"><a href="#">View all</a></li>
                                </ul>
                            </li>
                            <!-- User Account Menu -->
                            <li class="dropdown user user-menu">
                                <!-- Menu Toggle Button -->
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <!-- The user image in the navbar-->
                                    <img src="~/images/user2-160x160.jpg" class="user-image" alt="User Image">
                                    <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                    <span class="hidden-xs hidden-sm">Alexander Pierce</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <!-- The user image in the menu -->
                                    <li class="user-header">
                                        <img src="~/images/user2-160x160.jpg" class="img-circle" alt="User Image">
                                        <p>
                                            Alexander Pierce - Web Developer
                                            <small>Member since Nov. 2012</small>
                                        </p>
                                    </li>
                                    <!-- Menu Body -->
                                    <li class="user-body">
                                        <div class="row">
                                            <div class="col-xs-4 text-center">
                                                <a href="#">Followers</a>
                                            </div>
                                            <div class="col-xs-4 text-center">
                                                <a href="#">Sales</a>
                                            </div>
                                            <div class="col-xs-4 text-center">
                                                <a href="#">Friends</a>
                                            </div>
                                        </div>
                                        <!-- /.row -->
                                    </li>
                                    <!-- Menu Footer-->
                                    <li class="user-footer">
                                        <div class="pull-left">
                                            <a href="#" class="btn btn-default btn-flat">Profile</a>
                                        </div>
                                        <div class="pull-right">
                                            <a href="#" class="btn btn-default btn-flat">Sign out</a>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <!-- /.navbar-custom-menu -->
                </div>
                <!-- /.container-fluid -->
            </nav>
        </header>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <h1>Watcher Dashboard</h1>
                            <ol class="breadcrumb">
                                <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
                                <li class="active">Watcher Dashboard</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Main content -->
            <section class="content">
                <div class="container">
                    <!-- Small boxes (Stat box) -->
                    <!-- /.box-->
                    <div class="row">
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                            <div class="box watcher-box ">
                                <div class="box-header">
                                    <h3 class="box-title">Token Balance</h3>
                                </div>
                                <!-- /.box-header -->
                                <div class="box-body">
                                    <div class="small-box no-hover bg-orange">
                                        <div class="inner ">
                                            <p>Total Users</p>
                                            <h3 class="no-margin">12</h3>
                                        </div>
                                        <div class="icon-img">
                                            <img src="~/images/isa-token.png" alt="isa-token">
                                        </div>
                                        <div class="small-box-btn two-btn">
                                            <a href="#"><i class="fa fa-arrow-circle-down"></i> Deposit</a>
                                            <a href="#"><i class="fa fa-arrow-circle-down"></i> Withdraw</a>
                                        </div>
                                    </div>
                                    <div class="small-box no-hover bg-aqua">
                                        <div class="inner ">
                                            <p>ISA Tokens</p>
                                            <h3 class="no-margin">30K</h3>
                                        </div>
                                        <div class="icon-img">
                                            <img src="~/images/ixb-token.png" alt="isa-token">
                                        </div>
                                        <div class="small-box-btn one-btn">
                                            <a href="#"><i class="fa fa-arrow-circle-down"></i> Withdraw</a>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                            <div class="box watcher-box ">
                                <div class="box-header">
                                    <h3 class="box-title">Activity</h3>
                                    <span class="get-task"><a href="#"><i class="fa fa-plus"></i>  Get Task</a></span>
                                </div>
                                <!-- /.box-header -->
                                <div class="box-body ">
                                    <div class="task-wrap">
                                        <div class="task-list">
                                            <span class="task-counts">
                                                <img src="~/images/task-icon.png" alt="icon">
                                                <strong id="tasknumber">@ViewBag.taskNumber</strong>Tasks
                                            </span>
                                            <span class="task-link">
                                                <a href="@Url.Action("Workplace","IBISAWatchers")">View all Tasks</a>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="completed-task">
                                        <div class="task-circle c100 big p50" id="percentshow">
                                            <span>@ViewBag.countpercent %</span>
                                            <div class="slice">
                                                <div class="bar"></div>
                                                <div class="fill"></div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="task-legends">
                                        <ul>
                                            <li><span class="task-icon icon-cyan"></span>Completed</li>
                                            <li><span class="task-icon icon-gray"></span>Pending</li>
                                        </ul>
                                    </div>
                                </div>
                                <!-- /.box-body -->
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                            <div class="box watcher-box">
                                <div class="box-header">
                                    <h3 class="box-title">Monthly Rewards</h3>
                                </div>
                                <!-- /.box-header -->
                                <div class="box-body">
                                    <div class="monthly-rewards">
                                        <div class="reward-list">
                                            <div class="reward-detail">
                                                ISA engaged
                                            </div>
                                            <div class="reward-count">
                                                <img src="~/images/isa-token.png" alt="isa"><strong>900</strong>
                                            </div>
                                        </div>
                                        <div class="reward-list">
                                            <div class="reward-detail">
                                                XIB expected at the end of the month
                                            </div>
                                            <div class="reward-count">
                                                <img src="~/images/isa-token.png" alt="isa"><strong>9K</strong>
                                            </div>
                                        </div>
                                    </div>
                                    <a href="#"><i class="fa fa-angle-right"></i> View All Rewards</a>
                                </div>
                                <!-- /.box-body -->
                            </div>
                        </div>
                    </div>
                    <!-- /.box -->
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="container">
                <div class="pull-right hidden-xs">
                    <ul class="list-unstyled">
                        <li class="inline"><a href="#"><i class="fa fa-twitter"></i>&nbsp;&nbsp;</a> </li>
                        <li class="inline"><a href="#"><i class="fa fa-envelope"></i>&nbsp;&nbsp;</a> </li>
                        <li class="inline"><a href="#"><i class="fa fa-linkedin"></i>&nbsp;&nbsp;</a> </li>
                    </ul>
                </div>
                <strong>Copyright &copy; 2018 <a href="http://www.bitbank.lu/ibisa">Bitbank Sarl</a>.</strong> All Rights Reserved.
            </div>
        </footer>

    </div>
    <!-- ./wrapper -->
    <!-- jQuery 3 -->
    <script src="~/js/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- FastClick -->
    <script src="~/js/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/theme.min.js"></script>
    <!-- Sparkline -->
    <script src="~/js/jquery.sparkline.min.js"></script>
    <!-- jvectormap  -->
    <script src="~/js/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="~/js/jquery-jvectormap-world-mill-en.js"></script>
    <!-- SlimScroll -->
    <script src="~/js/jquery.slimscroll.min.js"></script>
    <!-- ChartJS -->
    <script src="~/js/chart.min.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/js/page.js"></script>
</body>
</html>

<script>
    $(document).ready(function () {
        var elementId = '@ViewBag.countpercent';
        $("#percentshow").removeClass('p50').addClass('p'+elementId);
    });

</script>
