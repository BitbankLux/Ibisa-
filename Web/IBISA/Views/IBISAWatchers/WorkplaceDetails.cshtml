@model IBISA.Models.WatcherQA

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>IBISA | Workplace</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/css/ionicons.min.css">
    <!-- jvectormap -->
    <link rel="stylesheet" href="~/css/jquery-jvectormap.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/style.css">
    @*<link rel="stylesheet" href="~/css/theme.css">*@
    <!-- AdminLTE Skins. Choose a skin from the css/skins
       folder instead of downloading all of them to reduce the load. -->
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>

<body class="hold-transition layout-top-nav">
    <div class="wrapper">
        <header class="main-header">
            <nav class="navbar navbar-static-top">
                <div class="container">
                    <div class="navbar-header">
                        <a href="index.html" class="navbar-brand"><img src="~/images/ibisa-logo.png" alt="IBISA Logo"></a>
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                            <i class="fa fa-bars"></i>
                        </button>
                    </div>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse pull-left" id="navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li><a href="@Url.Action("SystemDashboard", "IBISAAdmin")"><i class="fa fa-dashboard"></i> Dashboard <span class="sr-only">(current)</span></a></li>
                            <li class="active"><a href="agreemnt-details.html"><i class="fa fa-handshake-o"></i> Agreement</a></li>
                            <li><a href="#"><i class="fa fa-user"></i> Profile</a></li>
                        </ul>
                        <form class="navbar-form navbar-left visible-xs" role="search">
                            <div class="form-group">
                                <input type="text" class="form-control" id="navbar-search-input" placeholder="Search">
                            </div>
                        </form>
                    </div>
                    <!-- /.navbar-collapse -->
                    <!-- Navbar Right Menu -->
                    <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav">
                            <!-- Notifications Menu -->
                            <li class="dropdown notifications-menu">
                                <!-- Menu toggle button -->
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="fa fa-bell-o"></i>
                                    <span class="label label-warning">10</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="header">You have 10 notifications</li>
                                    <li>
                                        <!-- Inner Menu: contains the notifications -->
                                        <ul class="menu">
                                            <li>
                                                <!-- start notification -->
                                                <a href="#">
                                                    <i class="fa fa-users text-aqua"></i> 5 new members joined today
                                                </a>
                                            </li>
                                            <!-- end notification -->
                                        </ul>
                                    </li>
                                    <li class="footer"><a href="#">View all</a></li>
                                </ul>
                            </li>
                            <!-- User Account Menu -->
                            <li class="dropdown user user-menu">
                                <!-- Menu Toggle Button -->
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <!-- The user image in the navbar-->
                                    <img src="~/images/user8-128x128.jpg" class="user-image" alt="User Image">
                                    <!-- hidden-xs hides the username on small devices so only the image appears. -->
                                    <span class="hidden-xs hidden-sm">@ViewBag.userName</span>
                                </a>
                                <ul class="dropdown-menu">
                                    <!-- The user image in the menu -->
                                    <li class="user-header">
                                        <img src="~/images/user8-128x128.jpg" class="img-circle" alt="User Image">
                                        <p>
                                            @ViewBag.userName
                                            <small>Member since Nov. 2012</small>
                                        </p>
                                    </li>
                                    <!-- Menu Footer-->
                                    <li class="user-footer">
                                        <div class="pull-left">
                                            <a href="#" class="btn btn-default btn-flat">Profile</a>
                                        </div>
                                        <div class="pull-right">
                                            <a href="@Url.Action("Login", "Account")" class="btn btn-default btn-flat">Sign out</a>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <!-- /.navbar-custom-menu -->
                </div>
                <!-- /.container-fluid -->
            </nav>
        </header>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container">
                    <h1>Workplace</h1>
                    <ol class="breadcrumb">
                        <li><a href="index.html"><i class="fa fa-dashboard"></i> Home</a></li>
                        <li class="active">Workplace</li>
                    </ol>
                </div>
            </section>
            <!-- Main content -->
            <section class="content">
                <div class="container">
                    <!-- TABLE: LATEST ORDERS -->
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="box box-primary">
                                <!-- /.box-header -->
                                <div class="box-body">
                                    <div class="question-header">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <div class="tags">
                                                    <a href="#" class="">Bangladesh</a>
                                                    <a href="#" class="grey">Rice</a>
                                                </div>
                                            </div>
                                            <div class="col-sm-6 ">
                                                <div class="more-options">
                                                    <a href="#" data-toggle="modal" data-target="#myModal"><img src="~/images/plot-icon.png" alt="plot">PLot</a>
                                                    <a href="https://glam1.gsfc.nasa.gov/"><img src="~/images/more.png" alt="more">More</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    @using (Html.BeginForm("SubmitAns", "IBISAWatchers", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.HiddenFor(model => model.QuationId)
                                        @Html.HiddenFor(model => model.watcherId)
                                        @Html.HiddenFor(model => model.selectedOption)
                                        @Html.HiddenFor(model=>model.iddirId)
                                        <input type="hidden" name="selectedOption" id="selectedOption" />
                                        <div class="question-section">
                                            <h3 class="box-title">@Html.DisplayTextFor(model => model.QName)</h3>
                                        </div>
                                        <div class="workplace-option">
                                            @foreach (var item in Model.options)
                                            {
                                                <label class="option-radio">
                                                    <input type="radio" name="Answers" value="@item.optionId">
                                                    <span class="value">@item.optionDesc </span>
                                                </label>
                                                @*<input type="radio" name="Answers" value="@item.optionValue">*@
                                            }
                                            @*<a href="workplace.html" class="btn btn-primary btn-send" title="Send"><i class="fa fa-paper-plane" aria-hidden="true"></i></a>*@
                                            <button type="submit" id="submitbtn" value="Create" class="btn btn-primary btn-send" title="Send" onclick="return SubmitForm();">Send</button>
                                        </div>

                                    }
                                    <div class="row zonal-image" id="igusu">
                                        <div class="col-sm-4">
                                            <img src="~/images/1-ideal NDVI Iguazu Terra 20171202 - GMOD09Q1.A2017337.08d.png" alt="zone1">
                                            <div class="img-note">Zone in normal case</div>
                                        </div>
                                        <div class="col-sm-4">
                                            <img src="~/images/2-actual NDVI Iguazu Terra 20180524 - GMOD09Q1.A2018145.08.png" alt="zone2">
                                            <div class="img-note">Zone current situation</div>
                                        </div>
                                        <div class="col-sm-4">
                                            <img src="~/images/0-NDVI Anomaly Iguazu Terra 20180524 - GMOD09Q1.A2018145.08.png" alt="zone3">
                                            <div class="img-note">
                                                Change Detection Image
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row zonal-image" id="kilkis" style="display:none">
                                        <div class="col-sm-4">
                                            <img src="~/images/1-ideal NDVI Iguazu Terra 20171202 - GMOD09Q1.A2017337.08d.png" alt="zone1">
                                            <div class="img-note">Zone in normal case</div>
                                        </div>
                                        <div class="col-sm-4">
                                            <img src="~/images/2-actual NDVI Iguazu Terra 20180524 - GMOD09Q1.A2018145.08.png" alt="zone2">
                                            <div class="img-note">Zone current situation</div>
                                        </div>
                                        <div class="col-sm-4">
                                            <img src="~/images/0-NDVI Anomaly Iguazu Terra 20180524 - GMOD09Q1.A2018145.08.png" alt="zone3">
                                            <div class="img-note">
                                                KILKIS
                                            </div>
                                        </div>
                                    </div>
                                    <div id="myModal" class="modal fade" role="dialog">
                                        <div class="modal-dialog">

                                            <!-- Modal content-->
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                    <h3 class="modal-title" style="text-align:center">Plot</h3>
                                                </div>
                                                <div class="modal-body">
                                                    <img src="~/images/2-actual NDVI Iguazu Terra 20180524 - GMOD09Q1.A2018145.08.png" alt="zone2" style="width:100%">
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box -->
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="container">
                <div class="pull-right hidden-xs">
                    <ul class="list-unstyled">
                        <li class="inline"><a href="#"><i class="fa fa-twitter"></i>&nbsp;&nbsp;</a> </li>
                        <li class="inline"><a href="#"><i class="fa fa-envelope"></i>&nbsp;&nbsp;</a> </li>
                        <li class="inline"><a href="#"><i class="fa fa-linkedin"></i>&nbsp;&nbsp;</a> </li>
                    </ul>
                </div>
                <strong>Copyright &copy; 2018 <a href="http://www.bitbank.lu/ibisa">Bitbank Sarl</a>.</strong> All Rights Reserved.
            </div>
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- jQuery 3 -->
    <script src="~/js/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- FastClick -->
    <script src="~/js/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/theme.min.js"></script>
    <!-- Sparkline -->
    <script src="~/js/jquery.sparkline.min.js"></script>
    <!-- jvectormap  -->
    <script src="~/js/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="~/js/jquery-jvectormap-world-mill-en.js"></script>
    <!-- SlimScroll -->
    <script src="~/js/jquery.slimscroll.min.js"></script>
    <!-- ChartJS -->
    <script src="~/js/chart.min.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/js/page.js"></script>
</body>
</html>

<script>
    $(document).ready(function () {
        debugger
        var selectedopt = $("#selectedOption").val();
        if (selectedopt != 0) {
            $("input[name=Answers][value=" + selectedopt + "]").attr('checked', 'checked');
            $("#submitbtn").css("display", "none")
        }
        if ($("#iddirId").val() != 3) {
            $("#igusu").css("display", "none");
            $("#kilkis").css("display", "block");

        }
    });

    function SubmitForm() {
        var option = $('input[name=Answers]:checked').val();
        if (option != undefined) {
            $("#selectedOption").val(option);
            return true;
        }
        else {
            alert("Please Select any option")
            return false;
        }
    }
</script>